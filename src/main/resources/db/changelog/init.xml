                     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="create-test-hunt-database" author="redviko">

        <createTable tableName="application">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="full_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="application_type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="date_of_issue" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="hunt_ticket_series" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="hunt_ticket_number" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

        </createTable>


        <createTable tableName="resource">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="quota" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="district" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <createTable tableName="application_resource">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="application_id" type="int">
                <constraints nullable="false" foreignKeyName="application_resource_application_fk"
                             referencedTableName="application" referencedColumnNames="id"/>
            </column>
            <column name="resource_id" type="int">
                <constraints nullable="false" foreignKeyName="application_resource_resource_fk"
                             referencedTableName="resource" referencedColumnNames="id"/>
            </column>
            <column name="requested_quota" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable=" false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>

